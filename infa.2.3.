Задача 2
#include <iostream>
#include <iomanip>
#include <cmath>
#define c 29979245800

int main() {
    setlocale(LC_ALL, "Russian");
    double x,y,z;
    std::cout <<"Давление в системе СИ (Па) ";
    std::cin >> x;
    
    
    std::cout <<"Электрический заряд в системе СИ (Кл) ";
    std::cin >> y;
    
    std::cout <<"Магнитный поток в системе СИ (Вб) ";
    std::cin >> z;
    
    std::cout <<"Давление в системе СГСЕ "<< x*0.1<<std::endl;
    std::cout <<"Электричиский заряд в системе СГСЕ "<< y*3*pow(10,9)<< std::endl;
    std::cout <<"Магнитный поток в системе СГСЕ "<< z*pow(10,-8)*c<<std::endl;
    
}


Задача 3

Задача3
#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    float a, b, c;
    cin >> a;
    cin >> b;
    cin >> c;
    float dic;
    dic = pow(b, 2) - 4*a*c;

    if (dic < 0)
    {
        cout << "Resheniya net" << endl;
    }
    else if (dic == 0)
    {
        cout << -b/(2*a);
    }
    else
    {
        cout << (-b-sqrt(dic))/(2*a) << endl;
        cout << (-b+sqrt(dic))/(2*a) << endl;
    }
}

